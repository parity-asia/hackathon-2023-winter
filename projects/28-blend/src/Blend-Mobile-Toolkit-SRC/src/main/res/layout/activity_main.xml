<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Placeholder for your main layout -->

    <!-- Include the layouts for each component -->
    <include
        android:id="@+id/includeNickName"
        layout="@layout/activity_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <include
        android:id="@+id/includeSignInSignUp"
        layout="@layout/signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>



    <include
        android:id="@+id/includeUpload"
        layout="@layout/activity_upload"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <!-- Example buttons for navigation -->
    <Button
        android:id="@+id/btnSignInSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme"
        android:text="Sign In / Sign Up"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnGoToNickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to NickNameActivity"
        style="@style/AppTheme"
        android:layout_below="@id/btnSignInSignUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnGoToCreateFaceMesh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme"
        android:text="Go to CreateFaceMeshActivity"
        android:layout_below="@id/btnGoToNickName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
